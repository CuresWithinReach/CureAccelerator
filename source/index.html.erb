    <li class="featured-ui--card"><%= image_tag 'ui/ui-1-img.jpg', class: 'featured-ui--img' %></li>
    <li class="featured-ui--card"><%= image_tag 'ui/ui-7-img.jpg', class: 'featured-ui--img' %></li>
    <li class="featured-ui--card"><%= image_tag 'ui/ui-3-img.jpg', class: 'featured-ui--img' %></li>
    <li class="featured-ui--card"><%= image_tag 'ui/ui-4-img.jpg', class: 'featured-ui--img' %></li>
    <li class="featured-ui--card"><%= image_tag 'ui/ui-5-img.jpg', class: 'featured-ui--img' %></li>
    <li class="featured-ui--card"><%= image_tag 'ui/ui-6-img.jpg', class: 'featured-ui--img' %></li>
  </ul>
  </div>
</section>
<section class="callout--pink offset" role="region" aria-labelledby="about-cure-accelerator">
  <div class="page-section--container">
    <header role="section title" class="page-section--header">
      <div class="section-tag-border white"></div>
      <h6 class="section--tag inverse">CureAccelerator Community</h6>
    </header>
     <div class="page-section--body">
      <h2 class="title inverse">Featured User Roles</h2>
      <% link_to 'clinicians.html', class: 'card one-third hover' do %>
        <%= image_tag 'roles/clinician-img-2.png', alt: 'Clinicans', class: 'card--border__green-alt-1' %>
        <h5 class="card--title__green-alt-1">Clinicans</h5>
      <% end %>
      <% link_to 'researchers.html', class: 'card one-third hover' do %>
        <%= image_tag 'roles/researcher-img-2.png', alt: 'Researchers', class: 'card--border__green' %>
        <h5 class="card--title__green">Researchers</h5>
      <% end %>
      <% link_to 'funders.html', class: 'card one-third hover' do %>
        <%= image_tag 'roles/funders-img.png', alt: 'Funders', class: 'card--border__purple' %>
        <h5 class="card--title__purple">Funders</h5>
      <% end %>
    </div>
  </div>
  <div class="quote page-section--container callout--container">
    <blockquote class="text center">
      &ldquo;CureAccelerator is a great opportunity to improve patients' lives. I know that when I connect with like-minded people, together we can accelerate and enhance the impact of repurposing research.&rdquo;
      <cite>Gauthier Bouche, Medical Director AntiCancer Fund</cite>
    </blockquote>
